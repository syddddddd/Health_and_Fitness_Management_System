html(lang="en")
    head
        title Trainer page
    body  
        
        include ./header
        style.
            #discard {
                margin-right: 10px; 
            }
        
       
        h3 Add Session
        form(action="/addSession" method="post")
            |
            label(for='dropdown') #[strong Day:]   
            select(type='select' id='day' name='day')
                each day in ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday']
                    option(value=day) #{day}

            br
            br
            | #[strong Start Time:]
            label(for='dropdown')    Hour: 
            select(type='select' id='hour' name='start_hour')
                -var n = 6
                while n < 19
                    option(value=`${++n}`) #{n}
                           
            label(for='dropdown')   Minutes: 
            select(type='select' id='min' name='start_min')
                option(value='00' checked) 00
                option(value='30') 30

            br
            br
            | #[strong End Time:]
            label(for='dropdown')    Hour: 
            select(type='select' id='hour' name='end_hour')
                -var n = 7
                while n < 20
                    option(value=`${++n}`) #{n}
                           
            label(for='dropdown')   Minutes: 
            select(type='select' id='min' name='end_min')
                option(value='00' checked) 00
                option(value='30') 30

            br
            br
            | #[strong Session Type:] 
            label(for='dropdown')    
            select(type='select' id='sessType' name='sessType')
                option(value='private' checked) Private
                option(value='group') Group
            br
            br
            | 
            if session.type == 'admin'
                | #[strong Trainer:] 
                label(for='dropdown')   
                select(type='select' id='trainer' name='trainer')
                    each trainer in trainers
                        option(value=trainer.trainer_id) #{trainer.fname} #{trainer.lname}
            br
            br
            | 
            button#discard(type="submit" name="discardBtn" value=1) Discard Session
            button(type="submit") Add Session
            |
            br
            br