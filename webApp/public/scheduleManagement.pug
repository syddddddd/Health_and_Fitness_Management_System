html(lang="en")
    head
        title Trainer page
    body  
        
        include ./header
        style.
            table {
                border-collapse: collapse;
                width: 75%;
            }
            th, td {
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }

        h2 Schedule 
        |
        table
            thead 
                tr
                    th Day
                    th Start Time
                    th End Time
                    th Trainer
                    th Session Type
                    th Members
                    th Room Number
                    

            tbody
                if schedule && schedule.length > 0
                    each sched in schedule
                        tr 
                            td #{sched.day}
                            td #{sched.start_time}
                            td #{sched.end_time}
                            td
                                if trainers && trainers.length > 0
                                    each trainer in trainers     
                                        if trainer.schedule_id === sched.schedule_id
                                            p= trainer.trainers[0]
                                                
                            td #{sched.session_type}

                            td
                                if classes && classes.length > 0
                                    each item in classes     

                                        if item.schedule_id === sched.schedule_id
                                            - var n = 0
                                            each id in item.ids
                                                if n > 0
                                                    br 
                                                a(href=`/member/${id}`) #{item.members[n++]}
                                                br       
                                
                            td 
                                if sched.room_num
                                    p= schedule.room_num
                            
                            td 
                                a(href=`/editSession/${sched.schedule_id}`) edit

        br
        button(type="button" id="addSession") Add Session

        script(src="/js/trainerScheduleManagement.js")